<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rl_view_detail_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="10dip" >

        <ImageView
            android:id="@+id/iv_view_assign_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/grey" />

        <TextView
            android:id="@+id/tv_view_assign_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@+id/rl_view_assign_p"
            android:layout_toRightOf="@+id/iv_view_assign_state"
            android:text="加载中..."
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_view_assign_reson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_view_assign_name"
            android:layout_toRightOf="@+id/iv_view_assign_state"
            android:text="拒绝理由:"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_view_assign_reson_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_view_assign_name"
            android:layout_toRightOf="@+id/tv_view_assign_reson"
            android:text="加载中..."
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_view_assign_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/tv_view_assign_p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#EB1910"
                android:paddingBottom="5dip"
                android:paddingLeft="8dip"
                android:paddingRight="8dip"
                android:paddingTop="5dip"
                android:text="重新交办"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_view_assign_p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#635759"
                android:paddingBottom="5dip"
                android:paddingLeft="8dip"
                android:paddingRight="8dip"
                android:paddingTop="5dip"
                android:text="撤销"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_view_detail_wrapper"
        android:alpha="0.5"
        android:background="@android:color/white" />

</RelativeLayout>