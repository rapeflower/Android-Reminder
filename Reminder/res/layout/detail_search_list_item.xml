<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical" >
    
    
    <ImageView 
        android:id="@+id/detail_type_image"
        android:layout_alignTop="@+id/detail_type"
        android:layout_alignBottom="@+id/detail_start_time"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/add_pressed"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        />
    
    <TextView 
        android:id="@+id/detail_type"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/detail_type_image"
        android:text="fsafasfas"
        />
    
    <TextView 
        android:id="@+id/detail_start_time"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/detail_type"
        android:layout_toRightOf="@+id/detail_type_image"
        android:text="fafasfsaf"
        />

</RelativeLayout>
